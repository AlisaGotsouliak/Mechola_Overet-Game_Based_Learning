@code {
    bool CanAddQuestions = false;
    GameToAdd gameToAdd = new GameToAdd();
    SettingsUpdate settingToSend = new SettingsUpdate();
    QuestionDB GameToShow = new QuestionDB();
    FullGame Temp = new FullGame();
    List<string> DeletedImages = new List<string>();

    int ChangesSaved = -1;
    bool ShowPopUp = false;
    long maxFileSize = 4194304;
    string myFileImage = "";
    string isShown = "false";
    string msg = "";
    string PopMsg;
    FullGame full_gameInfo = new FullGame();
    [Parameter]
    public int GameCode { get; set; }
    [Parameter]
    public string GameName { get; set; }
    [Parameter]
    public int GameTime { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (GameName == " ")
            GameName = "";
        gameToAdd.Time = GameTime;
        gameToAdd.Game = GameName;
        if (GameCode != 0)
        {
            settingToSend.GameCode = GameCode;
            GameToShow.GameID = GameCode;
        }

        if (GameName != "")
        {
            var full_game_res = await Http.GetAsync("api/Games/GetFullGame/" + GameCode);
            if (full_game_res.IsSuccessStatusCode)
            {
                full_gameInfo = full_game_res.Content.ReadFromJsonAsync<FullGame>().Result;
            }
            else if (GameName != "")
                msg = full_game_res.Content.ReadAsStringAsync().Result;
        }
    }

    void ChangesInSettingOrElse()
    {
        if (Temp.question_List != null && GameToShow.ID != 0)
        {
            QuestionDB question1 = GameToShow;
            QuestionDB question2 = new QuestionDB();

            foreach (QuestionDB q in Temp.question_List)
            {
                if (q.ID == GameToShow.ID)
                {
                    question2 = q;
                }
            }
            if (question1 != null && question2 != null)
            {
                // Compare the Question properties
                if (question1.QuestionText != question2.QuestionText ||
                    question1.QuestionImage != question2.QuestionImage ||
                    question1.GameID != question2.GameID ||
                    question1.ID != question2.ID)
                {
                    ChangesSaved = 0;
                    ShowPopUp = true;
                    PopMsg = "Go Back Without Saving Question Or Answer";
                }
                else if (question1.Answers != null && question2.Answers != null)
                {
                    // Compare the Answers list
                    if (question1.Answers.Count != question2.Answers.Count)
                    {
                        ChangesSaved = 0;
                        ShowPopUp = true;
                        PopMsg = "Go Back Without Saving Question Or Answer";
                    }
                    if (ChangesSaved == -1 || ChangesSaved != 0)
                    {
                        for (int j = 0; j < question1.Answers.Count; j++)
                        {
                            var answer1 = question1.Answers[j];
                            var answer2 = question2.Answers[j];

                            // Compare the Answer properties
                            if (answer1.AnswerText != answer2.AnswerText ||
                                answer1.AnswerImage != answer2.AnswerImage ||
                                answer1.IsCorrect != answer2.IsCorrect ||
                                answer1.QuestionID != answer2.QuestionID ||
                                answer1.ID != answer2.ID)
                            {
                                ChangesSaved = 0;
                                ShowPopUp = true;
                                PopMsg = "Go Back Without Saving Question Or Answer";
                                break;
                            }
                        }
                    }
                }
            }
        }
        else
        {
            if (ChangesSaved == -1)
            {
                if (gameToAdd.Game != full_gameInfo.Game || full_gameInfo.Time != gameToAdd.Time)
                {
                    ChangesSaved = 0;
                    ShowPopUp = true;
                    PopMsg = "Go Back Without Saving Settings";
